{
  "name": "react-native-re-slider",
  "version": "3.0.2",
  "description": "Slider component for react-native using reanimated",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ken0x0a/react-native-reanimated-slider.git"
  },
  "homepage": "https://github.com/ken0x0a/react-native-reanimated-slider#readme",
  "author": "Ken Owada",
  "license": "MIT",
  "prettier": "@ken0x0a/prettier-config",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx --report-unused-disable-directives src --cache",
    "type-check": "tsc --noEmit",
    "type-check-ci": "tsc --incremental --outDir './build'",
    "test": "yarn run type-check && yarn run lint",
    "prepack": "bob build",
    "tsw": "tsc --noEmit --watch",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">2.0.0",
    "react-native-reanimated": ">2.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@ken0x0a/configs": "^2.8.0",
    "@ken0x0a/eslint-config-react-deps": "^6.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "react": "18.2.0",
    "react-native": "0.71.7",
    "react-native-builder-bob": "^0.20.4",
    "react-native-gesture-handler": "^2.8.0",
    "react-native-reanimated": "^2.12.0",
    "semantic-release": "^19.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ken0x0a/commit-config",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "chore",
      "defaultScope": "",
      "defaultSubject": "--",
      "defaultBody": "",
      "defaultIssues": ""
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
